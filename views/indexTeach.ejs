<%- include('./partials/header.ejs') %>

<div class="boc last">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success test-center">Add New Teacher</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                        
                      </div>
                      <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        
                      </div>
                      <div class="form-group">
                        <label for="dept">Department</label>
                        <input type="text" class="form-control" id="dept" name="dept" placeholder="Enter dept">
                        
                      </div>
                    <div class="form-group">
                      <label for="salary">Salary</label>
                      <input type="number" class="form-control" id="salary" name="salary" placeholder="Enter fees">
                      
                    </div>
                   
                    
                    <button  type="submit" class="btn btn-primary">Submit</button>
                  </form>
                  <form action= "/" method="get"><button  type="submit" class="btn btn-secondary g">Back</button></form>
                   
                  </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger test-center">List of Teachers</h2>
               <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">salary</th>
                    <th scope="col">dept</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=1 %>
                  <% data.forEach((item)=>{%>
                    <tr>
                      
                      <td><%= i++ %></td>
                      <td><%=item.name %></td>
                      <td><%=item.salary %></td>
                      <td><%=item.dept %></td>
                      <td>
                        <form action="/teacher/edit/<%=item._id %>" method="get" class="d-inline"><button type="submit" class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-left-square" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm10.096 3.146a.5.5 0 1 1 .707.708L6.707 9.95h2.768a.5.5 0 1 1 0 1H5.5a.5.5 0 0 1-.5-.5V6.475a.5.5 0 1 1 1 0v2.768l4.096-4.097z"/>
                        </svg></button></form>
                        <form action="/teacher/delete/<%=item._id %>" method="post" class="d-inline"><button type="submit" class="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                          <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                        </svg></button></form>
                        
                        
                      </td>
                    </tr>
                      <% }) %>
                 
                 
                </tbody>
               </table>

            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
   